{
  "include": [
    "examples/**/*",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/@types/*"
      ]
    },
    "esModuleInterop": true
  }
}
